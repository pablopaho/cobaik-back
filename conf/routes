# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Rent a bike
# 1. /bikes/available      --> Listar las bici disponibles para esa ubicacion
# 2. /bikes/$id<[0-9]+>    --> seleccionar una bici
# 3. /calendar/reservation --> reservar una bici (creo q este no se usa, porque se realiza cuando se paga)
# 4. /payments
#
# ~~~~
# Registrer a bike
# 1. /bikes/$id<[0-9]+>/location       --> ubica la bici (creo q este servicio debe crear una bici sin info)
# 2. /bikes/$bikeId<[0-9]+>/accesories --> Registra la info de la bici
# 3. /bikes/$id<[0-9]+>/photos         --> fotos de la bici
# 4. /owner/$id<[0-9]+>/identification-photo --> info de pasaporte o cedula
# 5. /bikes/$id<[0-9]+>/engage-info    --> info de lo que se puede hacer en la bici
# 6. /calendar/availability            --> asigna disponibilidad a la bici


# Bikes
GET     /bikes                                            co.com.cobaik.bikes.BikesController.bikes
POST    /insert/bike                                      co.com.cobaik.bikes.BikesController.insertBike
POST    /bikes/available                                  co.com.cobaik.bikes.BikesController.getAvailableBikes
GET     /bikes/$id<[0-9]+>                                co.com.cobaik.bikes.BikesController.getBikeDetail(id: Int)
PUT     /bikes/$id<[0-9]+>/location                       co.com.cobaik.bikes.BikesController.createBikeLocation(id: Int)
PUT     /bikes/$id<[0-9]+>/engage-info                    co.com.cobaik.bikes.BikesController.addBikeEngageInfo(id: Int)
PUT     /bikes/$id<[0-9]+>/photos                         co.com.cobaik.bikes.BikesController.addBikePhotos(id: Int)
PUT     /bikes/$bikeId<[0-9]+>/accesories                 co.com.cobaik.bikes.BikesController.addBikeAccessories(bikeId: Int)


# Contact
POST   /contact                                           co.com.cobaik.communications.contact.ContactController.sendContact

# Owner
POST /owner                                               co.com.cobaik.users.owners.OwnersController.createOwner

PUT /owner/$id<[0-9]+>/identification-photo               co.com.cobaik.users.owners.OwnersController.addOwnerIdentificationPicture(id: Int)

# calendar
POST /calendar/availability                               co.com.cobaik.calendar.CalendarController.createAvailabilityOnCalendar
POST /calendar/reservation                                co.com.cobaik.calendar.CalendarController.createReservationOnCalendar


# payment
POST /payments                                            co.com.cobaik.payments.PaymentsController.createPayment